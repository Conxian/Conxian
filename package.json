{
  "name": "conxian",
  "version": "0.1.1",
  "type": "module",
  "description": "Conxian is a sophisticated DeFi yield optimization protocol on Stacks, designed to automate and enhance returns from liquidity provision and yield farming.",
  "scripts": {
    "test": "vitest --config vitest.config.enhanced.ts",
    "test:tokens": "node tests/cx-tokens-simple.test.js",
    "test:watch": "vitest --watch --config vitest.config.enhanced.ts",
    "test:ui": "vitest --ui --config vitest.config.enhanced.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.enhanced.ts",
    "test:load": "vitest run stacks/tests/enhanced-100m-transaction-validation.ts --config vitest.config.enhanced.ts",
    "test:integration": "vitest run stacks/tests/comprehensive-integration.test.ts --config vitest.config.enhanced.ts",
    "test:contracts": "vitest run 'stacks/tests/**/*.test.ts' --config vitest.config.enhanced.ts",
    "test:enterprise": "vitest run stacks/tests/enterprise-system-integration.test.ts --config vitest.config.enhanced.ts",
    "test:flash-loans": "vitest run tests/comprehensive-lending-system.test.ts --config vitest.config.enhanced.ts",
    "test:tokens:watch": "vitest watch tests/cx-tokens-simple.test.ts",
    "test:tokens:coverage": "vitest run tests/cx-tokens.test.ts --coverage --config vitest.config.enhanced.ts",
    "test:all": "npm run test:contracts && npm run test:integration && npm run test:enterprise && npm run test:load && npm run test:tokens",
    "test:production": "npm run test:enterprise && npm run test:flash-loans && npm run test:integration && npm run test:tokens",
    "test:system": "vitest run tests/system-tests/ --config vitest.config.enhanced.ts",
    "test:performance": "vitest run tests/load-testing/ --config vitest.config.enhanced.ts",
    "clarinet:test": "clarinet test",
    "clarinet:check": "clarinet check",
    "check": "clarinet check",
    "clarinet:console": "clarinet console",
    "validate:docs": "node ./scripts/validate-docs.js",
    "ci": "node ./scripts/ensure-deps.js && node ./scripts/validate-docs.js && npx vitest run",
    "coverage": "vitest run --coverage",
    "update-autonomics": "tsx scripts/sdk_update_autonomics.ts",
    "load-test": "artillery run load-test.yml",
    "derive:wallets": "tsx scripts/derive_wallets.ts"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "8.13.1",
    "@stacks/network": "^7.2.0",
    "@stacks/transactions": "^7.2.0",
    "@stacks/wallet-sdk": "^7.2.0",
    "bignumber.js": "^9.1.2",
    "dotenv": "17.2.2",
    "elliptic": "^6.6.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@clarigen/core": "^3.2.0",
    "@stacks/clarinet-sdk": "^3.9.0",
    "@types/elliptic": "^6.4.18",
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^4.0.0",
    "artillery": "^2.0.26",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.0",
    "vitest-environment-clarinet": "^3.0.1"
  },
  "private": true
}
